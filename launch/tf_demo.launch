<launch>
    <!-- Запускаем симулятор черепашек -->
    <node pkg="turtlesim" type="turtlesim_node" name="simulator"/>
    
    <!-- Запускаем управление с клавиатуры -->
    <node pkg="turtlesim" type="turtle_teleop_key" name="keyboard" output="screen"/>
    
    <!-- Запускаем наш TF broadcaster для черепашки 1 -->
    <node name="turtle1_tf_broadcaster" pkg="study_pkg" type="turtle_tf_broadcaster.py" output="screen"/>
    
    <!-- Статическое преобразование: морковка перед черепашкой -->
    <node pkg="tf" type="static_transform_publisher" name="turtle1_to_carrot_tf" 
          args="0.3 0 0 0 0 0 turtle1 carrot 100"/>
    
    <!-- Запускаем Rviz для визуализации -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find study_pkg)/config/tf_demo.rviz"/>
</launch>
